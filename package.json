{
  "name": "tedicross",
  "version": "0.8.8",
  "description": "Better DiteCross",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TediCross/TediCross.git"
  },
  "scripts": {
    "start": "node main.js",
    "lint": "eslint ."
  },
  "dependencies": {
    "discord.js": "^11.5.0",
    "js-yaml": "^3.13.1",
    "mime": "^2.4.2",
    "moment": "^2.24.0",
    "ramda": "^0.26.1",
    "request": "^2.88.0",
    "simple-markdown": "^0.4.4",
    "telegraf": "^3.29.0",
    "yargs": "^13.2.4"
  },
  "devDependencies": {
    "eslint": "^5.16.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "env": {
      "es6": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "indent": [
        "error",
        "tab",
        {
          "SwitchCase": 1
        }
      ],
      "linebreak-style": "error",
      "quotes": "error",
      "semi": "error",
      "no-var": "error",
      "prefer-const": "error"
    }
  }
}
